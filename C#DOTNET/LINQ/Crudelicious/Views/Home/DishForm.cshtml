@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/css/style_form.css">
</head>
<body>

    <div id="container">

    <h1>Add a new Dish!</h1>

    <a href="/">Home</a>

    <form asp-action="CreateDish" asp-controller="Home" method="post">
        <div class="form-col">
            <span asp-validation-for="Chef"></span>
            <label asp-for="Chef"></label>
            <input asp-for="Chef">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"></label>
            <input asp-for="Name">
            <span asp-validation-for="Calories"></span>
            <label asp-for="Calories"></label>
            <input asp-for="Calories">
        </div>
        <div class="form-col">
            <span asp-validation-for="Tastiness"></span>
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-col">
            <span asp-validation-for="Description"></span>
            <label asp-for="Description"></label>
            <textarea asp-for="Description"></textarea>
            <button>Add Dish</button>
        </div>
    </form>

    </div>

</body>
</html>