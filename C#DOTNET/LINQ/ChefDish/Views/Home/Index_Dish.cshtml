@using ChefDish.Models
@model List<Dish>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="container">

    <nav>
        <h1><a href="/">Chefs</a> | Dishes</h1>
        <a href="dishes/new">Add a Dish</a>
    </nav>

    <h2>Yum, take a look at our tasty dishes!</h2>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Chef</th>
                <th>Tastiness</th>
                <th>Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Dish dish in @Model)
                {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Chef.FirstName @dish.Chef.LastName</td>
                    <td>@dish.Tastiness</td>
                    <td>@dish.Calories</td>
                </tr>
            }
        </tbody>
    </table>

    </div>
</body>
</html>