@using ChefDish.Models
@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/css/style_form.css">
</head>
<body>

    <div id="container">

    <h1>Add a new Dish!</h1>

    <a href="/dishes">Home</a>

    <form asp-action="dishes/new" asp-controller="Home" method="post">
        <div>
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"></label>
            <input asp-for="Name">
            <span asp-validation-for="Calories"></span>
            <label asp-for="Calories"></label>
            <input asp-for="Calories">
        </div>
        <div>
            <span asp-validation-for="ChefId"></span>
            <label asp-for="ChefId"></label>
            <select asp-for="ChefId">
            @foreach (Chef chef in ViewBag.Chefs)
            {
                <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
            }
            </select>
        </div>
        <div>
            <span asp-validation-for="Tastiness"></span>
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="desc">
            <span asp-validation-for="Description"></span>
            <label asp-for="Description"></label>
            <textarea asp-for="Description"></textarea>
        </div>
            <button>Add Dish</button>
    </form>

    </div>

</body>
</html>